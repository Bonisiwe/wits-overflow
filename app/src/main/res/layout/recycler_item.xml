<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_poster"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text = "Posted by: John Smith Â· On: 01/01/2000"
            android:layout_alignParentTop="true"
            android:textColor="@color/darkGrey"
            android:textSize="14sp"
            android:paddingHorizontal="5dp"
            />
        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_poster"
            android:text="Title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="5dp"
            />
        <TextView
            android:id="@+id/tv_card_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:singleLine="true"
            android:text="Body should go here."
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:layout_below="@+id/tv_card_title"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_card_body"
            android:paddingHorizontal="5dp">
            <RadioButton
                android:id="@+id/btn_upvote"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/like_button"
                android:button="@android:color/transparent"
                />
            <TextView
                android:id="@+id/tv_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:paddingHorizontal="5dp"/>
            <RadioButton
                android:id="@+id/btn_downvote"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/dislike_button"
                android:button="@android:color/transparent"
                />



        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_body"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btn_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/outline_comment_black_18"
                />
            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N "
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="3dp"
                />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
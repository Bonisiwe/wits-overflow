<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/RL_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:id="@+id/RG">

            <ToggleButton
                android:id="@+id/answer_like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textOn=" "
                android:textOff=" "
                android:background="@drawable/like_button">
            </ToggleButton>

            <TextView
                android:id="@+id/tv_answer_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:textColor="@color/darkGrey">
            </TextView>

            <ToggleButton
                android:id="@+id/answer_dislike"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textOff=" "
                android:textOn=" "
                android:background="@drawable/dislike_button">
            </ToggleButton>

        </RadioGroup>

        <TextView
            android:id="@+id/tv_answer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:text="Posted by: John Smith"
            android:textStyle="bold"
            android:textColor="@color/darkGrey"
            android:layout_toRightOf="@+id/RG"
            android:layout_toLeftOf="@+id/kebab"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="&#8942;"
            android:textColor="@color/black"
            android:id="@+id/kebab"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/black"
            android:text="Body of the comment should go here."
            android:textSize="14sp"
            android:id="@+id/tv_answer_body"
            android:layout_below="@+id/tv_answer_name"
            android:layout_toRightOf="@+id/RG"/>

        <TextView
            android:layout_below="@+id/tv_answer_body"
            android:id="@+id/tv_answer_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/RG"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_answer_date"
            android:id="@+id/tvReply"
            android:text="Reply"
            android:textColor="@drawable/tv_click"
            android:layout_toRightOf="@+id/RG">
        </TextView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReply">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LL_answer"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/rv_comments">
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_toRightOf="@+id/LL_answer"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_comments"
                android:padding="2dp">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
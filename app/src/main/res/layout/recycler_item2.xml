<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="4dp"
    android:id="@+id/cardView"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_gravity="center"
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">


                <RadioButton
                    android:id="@+id/btn_upvote2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/like_button"
                    android:button="@android:color/transparent" />

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_vote_count2"
                    android:text="0"
                    android:layout_height="30dp" />

                <RadioButton
                    android:id="@+id/btn_downvote2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/dislike_button"
                    android:button="@android:color/transparent" />


            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_poster_title2"
                android:paddingHorizontal="5dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tag"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_poster_title2"
                android:text="General"></com.google.android.material.chip.Chip>

            <TextView
                android:id="@+id/tv_card_body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingHorizontal="5dp"
                android:text="Body should go here."
                android:textSize="16sp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/darkGrey"
                android:layout_below="@+id/tag" />

            <TextView
                android:id="@+id/tv_poster2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:paddingHorizontal="5dp"
                android:text="Posted by: John Smith Â· On: 01/01/2000"
                android:textColor="@color/darkGrey"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>